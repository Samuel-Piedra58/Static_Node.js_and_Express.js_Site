extends layout.pug

block content 
  nav.grid-container.portfolio-breadcrumb
    a(href='/') ‚Üê Home
  article.grid-container.portfolio-intro.portfolio-project
    .grid-x
      .cell.small-6.medium-9.large-9

        h1= displayProject.project_name

        p.lead.text-light= displayProject.description

      .cell.portfolio-meta.small-6.medium-2.large-3
        h6 Technologies
        hr
        ul
          each technology in displayProject.technologies
           li.tech= technology

        a.button.expanded.github(href=displayProject.live_link, target="_blank") Live Demo
        a.button.expanded.github(href=displayProject.github_link, target="_blank") GitHub Repo
    hr
    each url, index in displayProject.image_urls
      if index !== 0
        img.image(src=url)